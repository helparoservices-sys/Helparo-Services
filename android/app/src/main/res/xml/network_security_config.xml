<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for development, but restrict in production -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Base config - only HTTPS for production -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <!-- Allow user certificates for development -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Trust specific domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">helparo.in</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">cashfree.com</domain>
    </domain-config>
</network-security-config>
